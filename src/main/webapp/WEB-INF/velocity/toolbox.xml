<?xml version="1.0"?>
<toolbox>
  <xhtml>true</xhtml>
  <!-- application -->
  <tool>
    <key>alternator</key>
    <scope>application</scope>
    <class>org.apache.velocity.tools.generic.AlternatorTool</class>
    <parameter name="auto-alternate" value="false" />
  </tool>
  <tool>
    <key>date</key>
    <scope>application</scope>
    <class>org.apache.velocity.tools.generic.ComparisonDateTool</class>
    <parameter name="format" value="yyyy-MM-dd" />
    <parameter name="skip" value="month" />
  </tool>
  <tool>
    <key>dateUtil</key>
    <scope>application</scope>
    <class>org.apache.velocity.tools.generic.DateTool</class>
  </tool>
  <tool>
    <key>esc</key>
    <scope>application</scope>
    <class>org.apache.velocity.tools.generic.EscapeTool</class>
  </tool>
  <tool>
    <key>math</key>
    <scope>application</scope>
    <class>org.apache.velocity.tools.generic.MathTool</class>
  </tool>
  <tool>
    <key>number</key>
    <scope>application</scope>
    <class>org.apache.velocity.tools.generic.NumberTool</class>
  </tool>
  <tool>
    <key>text</key>
    <scope>application</scope>
    <class>org.apache.velocity.tools.generic.ResourceTool</class>
    <parameter name="locale" value="zh_CN" />
  </tool>
  <tool>
    <key>stringUtils</key>
    <class>org.apache.commons.lang.StringUtils</class>
    <scope>application</scope>
  </tool>
</toolbox>